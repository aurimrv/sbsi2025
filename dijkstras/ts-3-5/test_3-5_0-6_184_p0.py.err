import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from dijkstras import dijkstras

def test_dijkstras():
    weighted_graph = {
        'A': {'B': 1, 'C': 4},
        'B': {'A': 1, 'C': 2},
        'C': {'B': 2, 'A': 4}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']

    weighted_graph = {
        'A': {'B': 2, 'C': 1},
        'B': {'A': 2, 'C': 3},
        'C': {'B': 3, 'A': 1}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C']

    weighted_graph = {
        'A': {'B': 3, 'C': 4},
        'B': {'A': 3, 'C': 2},
        'C': {'B': 2, 'A': 4}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']

    weighted_graph = {
        'A': {'B': 1, 'C': 2},
        'B': {'A': 1, 'C': 3},
        'C': {'B': 3, 'A': 2}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'C']

    weighted_graph = {
        'A': {'B': 2, 'C': 3},
        'B': {'A': 2, 'C': 1},
        'C': {'B': 1, 'A': 3}
    }
    src = 'A'
    dst = 'C'
    assert dijkstras(weighted_graph, src, dst) == ['A', 'B', 'C']