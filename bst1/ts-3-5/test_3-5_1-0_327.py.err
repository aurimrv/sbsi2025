# Test BinarySearchTree class

def test_insert_method():
    bst = BinarySearchTree()
    bst.insert(5)
    assert bst.head.value == 5
    bst.insert(3)
    assert bst.head.left.value == 3
    bst.insert(7)
    assert bst.head.right.value == 7

def test_min_method():
    bst = BinarySearchTree()
    bst.insert(5)
    bst.insert(3)
    bst.insert(7)
    assert bst.min() == 3
    
def test_delete_method():
    bst = BinarySearchTree()
    bst.insert(5)
    bst.insert(3)
    bst.insert(7)
    bst.delete(3)
    assert bst.search(3) is None

def test_search_method():
    bst = BinarySearchTree()
    bst.insert(5)
    bst.insert(3)
    bst.insert(7)
    assert bst.search(7).value == 7

def test_in_order_traversal_method():
    bst = BinarySearchTree()
    bst.insert(5)
    bst.insert(3)
    bst.insert(7)
    assert bst.in_order_traversal() == [3, 5, 7]

def test_merge_method():
    bst1 = BinarySearchTree()
    bst2 = BinarySearchTree()
    bst1.insert(5)
    bst1.insert(3)
    bst2.insert(2)
    bst2.insert(1)
    bst1.merge(bst2)
    assert bst1.in_order_traversal() == [1, 2, 3, 5]