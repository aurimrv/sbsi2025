import os
import sys
import itertools
from heapq import heappush, heappop

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from priority_queue1 import PriorityQueue

def test_add_task():
    pq = PriorityQueue()
    pq.add_task('Task1', 3)
    assert pq.pq[0][0] == 3
    assert pq.mapper['Task1'] == [3, 0, 'Task1']

def test_remove_task():
    pq = PriorityQueue()
    pq.add_task('Task2', 2)
    pq.remove_task('Task2')
    assert 'Task2' not in pq.mapper
    
def test_set_priority():
    pq = PriorityQueue()
    pq.add_task('Task3', 1)
    pq.set_priority('Task3', 5)
    assert pq.pq[0][0] == 5

def test_pop_task():
    pq = PriorityQueue()
    pq.add_task('Task4', 4)
    task = pq.pop_task()
    assert task == 'Task4'