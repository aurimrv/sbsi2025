sys.path.append(project_dir)

from priority_queue1 import PriorityQueue

def test_add_task():
    pq = PriorityQueue()
    pq.add_task('Task1', 1)
    assert len(pq.pq) == 1

    pq.add_task('Task2', 2)
    assert len(pq.pq) == 2

def test_remove_task():
    pq = PriorityQueue()
    pq.add_task('Task1', 1)
    pq.add_task('Task2', 2)

    pq.remove_task('Task1')
    assert len(pq.pq) == 1

    pq.remove_task('Task2')
    assert len(pq.pq) == 0

def test_set_priority():
    pq = PriorityQueue()
    pq.add_task('Task1', 1)
    pq.add_task('Task2', 2)

    pq.set_priority('Task1', 3)
    assert pq.mapper['Task1'][0] == 3

    pq.set_priority('Task2')
    assert pq.mapper['Task2'][0] == 1

def test_pop_task():
    pq = PriorityQueue()
    pq.add_task('Task1', 1)
    pq.add_task('Task2', 2)

    task = pq.pop_task()
    assert task == 'Task2'
    assert len(pq.pq) == 1

    task = pq.pop_task()
    assert task == 'Task1'
    assert len(pq.pq) == 0

def test_pop_task_empty_queue():
    pq = PriorityQueue()

    try:
        pq.pop_task()
    except KeyError:
        assert True
    else:
        assert False