import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from trie import Trie

@pytest.fixture
def sample_trie():
    words = ["apple", "banana", "apricot", "ball"]
    return Trie(words)

def test_trie_initialization(sample_trie):
    assert sample_trie.head == {'a': {'p': {'p': {'l': {'e': {'__eof__': '__eof__'}}, 'r': {'i': {'c': {'o': {'t': {'__eof__': '__eof__'}}}}}}}}, 'b': {'a': {'n': {'a': {'n': {'a': {'__eof__': '__eof__'}}}}, 'l': {'l': {'__eof__': '__eof__'}}}}

def test_trie_add(sample_trie):
    sample_trie.add("bat")
    assert sample_trie.head == {'a': {'p': {'p': {'l': {'e': {'__eof__': '__eof__'}}, 'r': {'i': {'c': {'o': {'t': {'__eof__': '__eof__'}}}}}, 't': {'__eof__': '__eof__'}}}, 'b': {'a': {'n': {'a': {'n': {'a': {'__eof__': '__eof__'}}}}, 'l': {'l': {'__eof__': '__eof__'}}}}}

def test_get_all_common_prefix(sample_trie):
    assert sample_trie.get_all_common_prefix("ap") == ['apple', 'apricot']
    assert sample_trie.get_all_common_prefix("ba") == ['banana', 'ball']
    assert sample_trie.get_all_common_prefix("c") == []

def test_get_all_common_prefix_empty(sample_trie):
    assert sample_trie.get_all_common_prefix("") == ['apple', 'banana', 'apricot', 'ball']