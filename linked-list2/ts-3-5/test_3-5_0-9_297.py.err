import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from linked_list2 import Node, LinkedList

# Test cases for Node class
def test_node_creation():
    node = Node(10)
    assert node.data == 10
    assert node.next is None

# Test cases for LinkedList class
def test_linkedList_initialization_empty():
    linked_list = LinkedList()
    assert linked_list.head is None
    assert linked_list.size() == 0

def test_linkedList_push_pop():
    linked_list = LinkedList()
    linked_list.push(5)
    linked_list.push(10)
    assert linked_list.size() == 2
    assert linked_list.pop() == 10
    assert linked_list.pop() == 5
    assert linked_list.size() == 0

def test_linkedList_search():
    linked_list = LinkedList([10, 20, 30])
    node = linked_list.search(20)
    assert node.data == 20

def test_linkedList_remove():
    linked_list = LinkedList([1, 2, 3, 4])
    linked_list.remove(2)
    assert linked_list.size() == 3
    assert linked_list.display() == "(1, 3, 4)"

def test_linkedList_display():
    linked_list = LinkedList([10, "abc", 5.5])
    assert linked_list.display() == "(10, abc, 5.5)"