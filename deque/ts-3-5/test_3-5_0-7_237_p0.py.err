import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from deque import Deque

def test_init():
    deque = Deque()
    assert deque.size() == 0

def test_append():
    deque = Deque()
    deque.append(5)
    assert deque.size() == 1
    assert deque.peek() == 5

def test_appendleft():
    deque = Deque()
    deque.appendleft(3)
    assert deque.size() == 1
    assert deque.peekleft() == 3

def test_pop():
    deque = Deque([1, 2, 3])
    assert deque.pop() == 3
    assert deque.size() == 2

def test_popleft():
    deque = Deque([1, 2, 3])
    assert deque.popleft() == 1
    assert deque.size() == 2

def test_peek():
    deque = Deque([1, 2, 3])
    assert deque.peek() == 3

def test_peekleft():
    deque = Deque([1, 2, 3])
    assert deque.peekleft() == 1