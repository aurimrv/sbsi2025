import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from stack import Stack

def test_stack_push():
    stack = Stack()
    stack.push(1)
    assert stack.pop() == 1

def test_stack_pop_empty_stack():
    stack = Stack()
    with pytest.raises(Exception):
        stack.pop()

def test_stack_pop_non_empty_stack():
    stack = Stack()
    stack.push(1)
    stack.push(2)
    assert stack.pop() == 2
    assert stack.pop() == 1

def test_stack_pop_until_empty():
    stack = Stack()
    stack.push(1)
    stack.push(2)
    stack.pop()
    stack.pop()
    with pytest.raises(Exception):
        stack.pop()

def test_stack_push_pop_alternate():
    stack = Stack()
    stack.push(1)
    assert stack.pop() == 1
    stack.push(2)
    assert stack.pop() == 2
