import os
import sys
import pytest

# Add project directory to the sys path
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from stack import Stack

def test_stack_push():
    stack = Stack()
    
    stack.push(1)
    assert stack._stack.head.value == 1
    
    stack.push(2)
    assert stack._stack.head.value == 2

def test_stack_pop():
    stack = Stack()
    stack.push(1)
    stack.push(2)
    
    top_value = stack.pop()
    assert top_value == 2
    
    top_value = stack.pop()
    assert top_value == 1

def test_stack_push_pop():
    stack = Stack()
    
    stack.push(5)
    stack.push(10)
    
    top_value = stack.pop()
    assert top_value == 10
    
    stack.push(15)
    
    top_value = stack.pop()
    assert top_value == 15