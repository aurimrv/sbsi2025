import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from lru_cache import ListNode, LruCache

# Test cases for ListNode class
def test_list_node_init():
    node = ListNode(1, 'a')
    assert node.key == 1
    assert node.val == 'a'
    assert node.prev is None
    assert node.next is None

def test_list_node_init_with_none():
    node = ListNode(None, None)
    assert node.key is None
    assert node.val is None
    assert node.prev is None
    assert node.next is None

# Test cases for LruCache class
def test_lru_cache_init():
    cache = LruCache(3)
    assert cache.capacity == 3
    assert cache.head.key == cache.tail.key == LruCache.terminal_value
    assert cache.head.next == cache.tail
    assert cache.tail.prev == cache.head
    assert len(cache.lookup_map) == 0

def test_lru_cache_put():
    cache = LruCache(2)
    cache.put(1, 'a')
    cache.put(2, 'b')
    assert cache.head.next.key == 2
    assert cache.head.next.val == 'b'
    assert cache.head.next.next.key == 1
    assert cache.head.next.next.val == 'a'
    assert len(cache.lookup_map) == 2

def test_lru_cache_put_with_capacity_exceeded():
    cache = LruCache(2)
    cache.put(1, 'a')
    cache.put(2, 'b')
    cache.put(3, 'c')
    assert 1 not in cache.lookup_map
    assert cache.head.next.key == 3
    assert len(cache.lookup_map) == 2

def test_lru_cache_get():
    cache = LruCache(2)
    cache.put(1, 'a')
    cache.put(2, 'b')
    assert cache.get(1) == 'a'
    assert cache.head.next.key == 1
    assert cache.head.next.val == 'a'

def test_lru_cache_get_not_found():
    cache = LruCache(2)
    cache.put(1, 'a')
    cache.put(2, 'b')
    assert cache.get(3) == -1
    assert cache.head.next.key == 2

def test_lru_cache_internal_add():
    cache = LruCache(2)
    node = ListNode(1, 'a')
    cache._add(node)
    assert cache.head.next.key == 1
    assert cache.head.next.val == 'a'
    assert cache.head.next.next == cache.tail

def test_lru_cache_internal_remove():
    cache = LruCache(2)
    node = ListNode(1, 'a')
    cache._add(node)
    cache._remove(node)
    assert cache.head.next == cache.tail
    assert cache.tail.prev == cache.head
    assert len(cache.lookup_map) == 0