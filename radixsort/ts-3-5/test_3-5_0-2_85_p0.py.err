import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from radixsort import radixsort

def test_create_buckets():
    ar = [123, 456, 789]
    iteration = 0
    buckets = radixsort.create_buckets(ar, iteration)
    assert len(buckets) == 10
    assert all(isinstance(bucket, list) for bucket in buckets)

def test_create_list():
    buckets = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]
    nums = radixsort.create_list(buckets)
    assert nums == [1, 2, 3, 4, 5, 6, 7, 8, 9]

def test_radixsort():
    ar = [170, 45, 75, 90, 802, 24, 2, 66]
    sorted_ar = radixsort.radixsort(ar)
    assert sorted_ar == [2, 24, 45, 66, 75, 90, 170, 802]

def test_radixsort_large_numbers():
    ar = [1000000, 999999, 123456, 654321, 777777]
    sorted_ar = radixsort.radixsort(ar)
    assert sorted_ar == [123456, 654321, 777777, 999999, 1000000]