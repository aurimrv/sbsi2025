import os
import sys
import mergesort

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

def test_sort():
    assert mergesort.mergesort([4, 2, 1, 3]) == [1, 2, 3, 4]
    assert mergesort.mergesort([10, 5, 8, 3, 1, 6, 7]) == [1, 3, 5, 6, 7, 8, 10]
    assert mergesort.mergesort([1, 2, 3, 4]) == [1, 2, 3, 4]

def test_merge():
    assert mergesort.merge([1, 3, 5], [2, 4, 6]) == [1, 2, 3, 4, 5, 6]
    assert mergesort.merge([10, 20, 30], [5, 15, 25]) == [5, 10, 15, 20, 25, 30]
    assert mergesort.merge([9, 8, 7], [6, 5, 4]) == [4, 5, 6, 7, 8, 9]