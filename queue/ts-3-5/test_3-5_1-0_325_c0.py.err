import os
import sys
from a_queue import Queue

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

import pytest

def test_enqueue():
    q = Queue()
    q.enqueue(1)
    assert q.size() == 1
    q.enqueue(2)
    assert q.size() == 2

def test_dequeue():
    q = Queue()
    q.enqueue(1)
    q.enqueue(2)
    assert q.dequeue() == 1
    assert q.size() == 1
    assert q.dequeue() == 2
    assert q.size() == 0

def test_peek():
    q = Queue()
    q.enqueue(1)
    q.enqueue(2)
    assert q.peek() == 1
    q.dequeue()
    assert q.peek() == 2
    q.dequeue()
    assert q.peek() == None

def test_size():
    q = Queue()
    assert q.size() == 0
    q.enqueue(1)
    assert q.size() == 1
    q.enqueue(2)
    assert q.size() == 2
    q.dequeue()
    assert q.size() == 1
    q.dequeue()
    assert q.size() == 0