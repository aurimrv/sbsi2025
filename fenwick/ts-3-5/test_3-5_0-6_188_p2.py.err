import pytest
import os
import sys

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from fenwick_tree import FenwickTree

@pytest.fixture
def sample_fenwick_tree():
    arr = [3, 2, -1, 6, 5, 4, -3, 3, 7, 2]
    return FenwickTree(arr)

def test_update(sample_fenwick_tree):
    sample_fenwick_tree.update(2, 4)
    assert sample_fenwick_tree.nums == [0, 3, 5, 4, 15, 5, -3, 3, 7, 2]
    assert sample_fenwick_tree.tree == [0, 3, 5, 9, 15, 5, 4, 1, 3, 10, 2]

def test_sum_of_n(sample_fenwick_tree):
    assert sample_fenwick_tree.sum_of_n(4) == 15
    assert sample_fenwick_tree.sum_of_n(7) == 19

def test_sum_of_range(sample_fenwick_tree):
    assert sample_fenwick_tree.sum_of_range(2, 6) == 16
    assert sample_fenwick_tree.sum_of_range(1, 9) == 23