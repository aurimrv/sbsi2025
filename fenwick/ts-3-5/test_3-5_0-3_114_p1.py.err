import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from fenwick_tree import FenwickTree

@pytest.fixture
def initialized_fenwick_tree():
    arr = [3, 2, -1, 6, 5, 4, -3, 3, 7, 2]
    return FenwickTree(arr)

def test_update(initialized_fenwick_tree):
    initialized_fenwick_tree.update(2, 10)
    assert initialized_fenwick_tree.sum_of_n(2) == 12

def test_sum_of_n(initialized_fenwick_tree):
    assert initialized_fenwick_tree.sum_of_n(5) == 15

def test_sum_of_range(initialized_fenwick_tree):
    assert initialized_fenwick_tree.sum_of_range(2, 5) == 12

def test_update_multiple_times(initialized_fenwick_tree):
    initialized_fenwick_tree.update(4, 3)
    initialized_fenwick_tree.update(7, -2)
    assert initialized_fenwick_tree.sum_of_n(4) == 18
    assert initialized_fenwick_tree.sum_of_range(3, 7) == 15