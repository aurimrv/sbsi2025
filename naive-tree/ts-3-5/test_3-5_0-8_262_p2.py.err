import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from naive_tree import NaiveBinaryTree, Node

@pytest.fixture
def sample_tree():
    bt = NaiveBinaryTree()
    bt.head = Node(1)
    bt.head.left = Node(2)
    bt.head.right = Node(3)
    bt.head.left.left = Node(4)
    bt.head.left.right = Node(5)
    bt.head.right.left = Node(6)
    bt.head.right.right = Node(7)
    return bt

def test_pre_order_traversal(sample_tree):
    assert sample_tree.pre_order_traversal() == [1, 2, 4, 5, 3, 6, 7]
    assert sample_tree.pre_order_traversal() != [1, 2, 3, 4, 5, 6, 7]

def test_in_order_traversal(sample_tree):
    assert sample_tree.in_order_traversal() == [4, 2, 5, 1, 6, 3, 7]
    assert sample_tree.in_order_traversal() != [1, 2, 3, 4, 5, 6, 7]

def test_post_order_traversal(sample_tree):
    assert sample_tree.post_order_traversal() == [4, 5, 2, 6, 7, 3, 1]
    assert sample_tree.post_order_traversal() != [1, 2, 3, 4, 5, 6, 7]

def test_level_order_traversal(sample_tree):
    assert sample_tree.level_order_traversal() == [1, 2, 3, 4, 5, 6, 7]
    assert sample_tree.level_order_traversal() != [1, 3, 2, 4, 5, 7, 6]