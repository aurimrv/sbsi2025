import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from permutations import permutations_of_word

def test_permutations_of_word_empty_string():
    assert permutations_of_word('') == ['']

def test_permutations_of_word_single_letter():
    assert permutations_of_word('a') == ['a']

def test_permutations_of_word_two_letters():
    assert permutations_of_word('ab') == ['ab', 'ba']

def test_permutations_of_word_three_letters():
    assert permutations_of_word('abc') == ['abc', 'acb', 'bac', 'bca', 'cab', 'cba']

def test_permutations_of_word_repeated_letters():
    assert permutations_of_word('aab') == ['aab', 'aba', 'baa']

def test_permutations_of_word_long_word():
    assert permutations_of_word('hello') == ['hello', 'helol', 'heoll', 'hlelo', 'hleol', 'hlleo', 'hlloe', 'hlloe', 'hloel', 'hlole', 'hoell', 'holel', 'holle', 'ehllo', 'ehlol', 'eholl', 'elhlo', 'elhol', 'ellho', 'ellho', 'elloh', 'elohl', 'elolh', 'eohll', 'eolhl', 'eollh', 'lhello', 'lhlelo', 'lhleol', 'lhloel', 'lhlole', 'lhoell', 'lholl', 'lehllo', 'lehlol', 'leholl', 'lelhlo', 'lelhol', 'lellho', 'lellho', 'lelloh', 'lelohl', 'lelolh', 'leohll', 'leolhl', 'leollh', 'llhello', 'llhleo', 'llhloe', 'llhoel', 'llhole', 'llohel', 'lloleh', 'lloleh', 'llohel', 'llolhe', 'llolhe', 'lloelh', 'lloehl', 'lloelh', 'lloehl', 'lohell', 'lohel', 'loleh', 'loleh', 'lolhe', 'lolhe', 'loelh', 'loehl', 'loelh', 'loehl', 'loleh']