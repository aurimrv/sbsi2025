import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from edit_distance import calculate_edit_distance

def test_calculate_edit_distance():
    str1 = "kitten"
    str2 = "sitting"
    expected_trace = ['Substitute k', 'Match i', 'Match t', 'Match t', 'Match e', 'Insert n', 'Insert g']
    assert calculate_edit_distance(str1, str2) == expected_trace

def test_calculate_edit_distance_same_strings():
    str1 = "hello"
    str2 = "hello"
    expected_trace = []
    assert calculate_edit_distance(str1, str2) == expected_trace

def test_calculate_edit_distance_one_empty_string():
    str1 = ""
    str2 = "testing"
    expected_trace = ['Insert t', 'Insert e', 'Insert s', 'Insert t', 'Insert i', 'Insert n', 'Insert g']
    assert calculate_edit_distance(str1, str2) == expected_trace

def test_calculate_edit_distance_longer_strings():
    str1 = "mutation"
    str2 = "testing"
    expected_trace = ['Substitute m', 'Substitute u', 'Substitute t', 'Substitute a', 'Insert i', 'Insert o', 'Substitute n']
    assert calculate_edit_distance(str1, str2) == expected_trace

def test_calculate_edit_distance_different_lengths():
    str1 = "abcde"
    str2 = "abcd"
    expected_trace = ['Delete e']
    assert calculate_edit_distance(str1, str2) == expected_trace