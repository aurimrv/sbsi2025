import os
import sys
module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from complement import complement

def test_complement_zero():
    assert complement(0) == 1

def test_complement_one():
    assert complement(1) == 0

def test_complement_positive():
    assert complement(5) == 2

def test_complement_large_num():
    assert complement(15) == 0

def test_complement_negative():
    assert complement(-5) == -6

def test_complement_float():
    assert complement(5.5) == 2