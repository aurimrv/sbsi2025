import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from binheap import Binheap

@pytest.fixture
def empty_heap():
    return Binheap()

@pytest.fixture
def initialized_heap():
    return Binheap([5, 8, 3, 2, 7])

def test_initialization(empty_heap):
    assert empty_heap.container == [None]

def test_push(empty_heap):
    empty_heap.push(10)
    assert empty_heap.container == [None, 10]

def test_pop(initialized_heap):
    initialized_heap.pop()
    assert initialized_heap.container == [None, 7, 5, 3, 2]

def test_display(initialized_heap):
    assert initialized_heap.display() == " 8 5 7 2 3 \n"

def test_balance(empty_heap):
    empty_heap.push(8)
    empty_heap.push(5)
    empty_heap.push(10)
    assert empty_heap.container == [None, 10, 5, 8]