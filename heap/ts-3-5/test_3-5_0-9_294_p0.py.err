import os
import sys
import pytest

module_dir = os.path.dirname(os.path.abspath(__file__))
project_dir = os.path.abspath(os.path.join(module_dir, '..'))
sys.path.append(project_dir)

from heap import Heap

@pytest.fixture
def empty_heap():
    heap = Heap()
    return heap

def test_insert(empty_heap):
    empty_heap.insert(5)
    assert empty_heap.min() == 5

def test_percolate(empty_heap):
    empty_heap.heap_list = [0, 2, 3, 1]
    empty_heap.percolate(3)
    assert empty_heap.heap_list == [0, 1, 3, 2]

def test_sift(empty_heap):
    empty_heap.heap_list = [0, 3, 2, 5]
    empty_heap.sift(1)
    assert empty_heap.heap_list == [0, 2, 3, 5]

def test_find_min_child_index(empty_heap):
    empty_heap.heap_list = [0, 5, 3, 2]
    assert empty_heap.find_min_child_index(1) == 3

def test_min(empty_heap):
    empty_heap.heap_list = [0, 5]
    assert empty_heap.min() == 5

def test_delete_min(empty_heap):
    empty_heap.heap_list = [0, 2, 3, 1]
    assert empty_heap.delete_min() == 1

def test_build(empty_heap):
    empty_heap.build([3, 1, 2])
    assert empty_heap.heap_list == [0, 1, 3, 2]

def test_size(empty_heap):
    empty_heap.heap_list = [0, 2, 3, 1]
    assert empty_heap.size() == 3